<atlassian-plugin key="${atlassian.plugin.key}" name="${project.name}" plugins-version="2">
  <plugin-info>
    <description>${project.description}</description>
    <version>${project.version}</version>
    <vendor name="${project.organization.name}" url="${project.organization.url}"/>
    <param name="plugin-icon">images/pluginIcon.png</param>
    <param name="plugin-logo">images/pluginLogo.png</param>
  </plugin-info>

  <resource type="i18n" name="i18n" location="confluence-usage"/>

  <web-resource key="confluence-usage-resources" name="confluence-usage Web Resources">
    <dependency>com.atlassian.auiplugin:ajs</dependency>
    <resource type="download" name="confluence-usage.css" location="/css/confluence-usage.css"/>
    <resource type="download" name="confluence-usage.js" location="/js/confluence-usage.js"/>
    <resource type="download" name="images/" location="/images"/>
    <context>confluence-usage</context>
  </web-resource>

  <job-config name="Usage Confluence User Count" key="usageConfluenceUserCountJobConfig">
    <job key="usageConfluenceUserCountJob" perClusterJob="true"/>
    <schedule cron-expression="0 0/5 * * * ?" jitterSecs="10"/>
    <managed editable="true" keepingHistory="true" canRunAdhoc="true" canDisable="true"/>
  </job-config>

  <job-config name="Usage Confluence User List" key="usageConfluenceUserListJobConfig">
    <job key="usageConfluenceUserListJob" perClusterJob="true"/>
    <schedule cron-expression="0 0/5 * * * ?" jitterSecs="10"/>
    <managed editable="true" keepingHistory="true" canRunAdhoc="true" canDisable="true"/>
  </job-config>

</atlassian-plugin>